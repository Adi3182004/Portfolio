    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
      // ===== SPHERE ANIMATION CLASS =====
      class SphereAnimation {
        constructor(scene, currentColor) {
          this.scene = scene;
          this.currentColor = currentColor;
          
          // Animation parameters
          this.PARTICLE_COUNT = 1500;
          this.SPHERE_RADIUS = 1.2;
          this.SCATTER_DISTANCE = 8;
          this.ANIMATION_DURATION = 3000;
          this.RECONSTRUCTION_DURATION = 4000;
          this.AUTO_CYCLE_DELAY = 2000;

          // Animation state
          this.isAnimating = false;
          this.animationPhase = 'idle';
          this.autoMode = false;
          this.autoTimer = null;

          // Particle data
          this.particles = [];
          this.originalPositions = [];
          this.particleSystem = null;
          this.lineSystem = null;
          
          this.initializeParticles();
          this.createLineSystem();
        }

        initializeParticles() {
          const particleGeometry = new THREE.BufferGeometry();
          const positions = new Float32Array(this.PARTICLE_COUNT * 3);
          const colors = new Float32Array(this.PARTICLE_COUNT * 3);
          
          // Create sphere vertices for particle positions
          for (let i = 0; i < this.PARTICLE_COUNT; i++) {
            const phi = Math.acos(-1 + (2 * i) / this.PARTICLE_COUNT);
            const theta = Math.sqrt(this.PARTICLE_COUNT * Math.PI) * phi;
            
            const x = this.SPHERE_RADIUS * Math.cos(theta) * Math.sin(phi);
            const y = this.SPHERE_RADIUS * Math.sin(theta) * Math.sin(phi);
            const z = this.SPHERE_RADIUS * Math.cos(phi);
            
            positions[i * 3] = x;
            positions[i * 3 + 1] = y;
            positions[i * 3 + 2] = z;
            
            // Store original position
            this.originalPositions.push({ x, y, z });
            
            // Create particle data
            const particle = {
              originalPosition: { x, y, z },
              scatteredPosition: {
                x: x + (Math.random() - 0.5) * this.SCATTER_DISTANCE * 2,
                y: y + (Math.random() - 0.5) * this.SCATTER_DISTANCE * 2,
                z: z + (Math.random() - 0.5) * this.SCATTER_DISTANCE * 2
              },
              currentPosition: { x, y, z },
              velocity: { x: 0, y: 0, z: 0 },
              phase: 0
            };
            
            this.particles.push(particle);
            
            // Set colors
            const color = new THREE.Color(this.currentColor);
            colors[i * 3] = color.r;
            colors[i * 3 + 1] = color.g;
            colors[i * 3 + 2] = color.b;
          }
          
          particleGeometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
          particleGeometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));
          
          const particleMaterial = new THREE.PointsMaterial({
            size: 0.04,
            transparent: true,
            opacity: 0.8,
            sizeAttenuation: true,
            vertexColors: true,
            blending: THREE.AdditiveBlending
          });
          
          this.particleSystem = new THREE.Points(particleGeometry, particleMaterial);
          this.scene.add(this.particleSystem);
        }

        createLineSystem() {
          const lineGeometry = new THREE.BufferGeometry();
          const maxConnections = 200;
          const positions = new Float32Array(maxConnections * 6);
          
          lineGeometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
          
          const lineMaterial = new THREE.LineBasicMaterial({
            color: this.currentColor,
            transparent: true,
            opacity: 0,
            linewidth: 1
          });
          
          this.lineSystem = new THREE.LineSegments(lineGeometry, lineMaterial);
          this.lineSystem.visible = false;
          this.scene.add(this.lineSystem);
        }

        updateLineConnections() {
          if (!this.lineSystem.visible || this.particles.length === 0) return;

          const linePositions = this.lineSystem.geometry.attributes.position.array;
          const maxConnections = Math.min(100, Math.floor(linePositions.length / 6));
          let lineIndex = 0;

          for (let i = 0; i < this.particles.length && lineIndex < maxConnections; i += 3) {
            for (let j = i + 1; j < this.particles.length && lineIndex < maxConnections; j += 3) {
              const p1 = this.particles[i].currentPosition;
              const p2 = this.particles[j].currentPosition;
              const dx = p1.x - p2.x;
              const dy = p1.y - p2.y;
              const dz = p1.z - p2.z;
              const dist = Math.sqrt(dx * dx + dy * dy + dz * dz);
              
              if (dist < 0.8) {
                const baseIndex = lineIndex * 6;
                
                linePositions[baseIndex] = p1.x;
                linePositions[baseIndex + 1] = p1.y;
                linePositions[baseIndex + 2] = p1.z;
                
                linePositions[baseIndex + 3] = p2.x;
                linePositions[baseIndex + 4] = p2.y;
                linePositions[baseIndex + 5] = p2.z;
                
                lineIndex++;
              }
            }
          }

          for (let i = lineIndex * 6; i < linePositions.length; i++) {
            linePositions[i] = 0;
          }

          this.lineSystem.geometry.attributes.position.needsUpdate = true;
        }

        startScatterAnimation() {
          if (this.isAnimating) return;
          
          this.isAnimating = true;
          this.animationPhase = 'scattering';
          this.updateStatus();

          const startTime = Date.now();

          const scatterStep = () => {
            const elapsed = Date.now() - startTime;
            const progress = Math.min(elapsed / this.ANIMATION_DURATION, 1);
            const easedProgress = this.easeOutCubic(progress);

            const positions = this.particleSystem.geometry.attributes.position.array;
            const colors = this.particleSystem.geometry.attributes.color.array;

            this.particles.forEach((particle, index) => {
              const original = particle.originalPosition;
              const scattered = particle.scatteredPosition;
              
              particle.currentPosition.x = original.x + (scattered.x - original.x) * easedProgress;
              particle.currentPosition.y = original.y + (scattered.y - original.y) * easedProgress;
              particle.currentPosition.z = original.z + (scattered.z - original.z) * easedProgress;

              positions[index * 3] = particle.currentPosition.x;
              positions[index * 3 + 1] = particle.currentPosition.y;
              positions[index * 3 + 2] = particle.currentPosition.z;
              
              // Color cycling during scatter
              const hue = (0.6 + Math.sin(elapsed * 0.002 + index * 0.01) * 0.2) % 1;
              const color = new THREE.Color().setHSL(hue, 0.8, 0.6);
              colors[index * 3] = color.r;
              colors[index * 3 + 1] = color.g;
              colors[index * 3 + 2] = color.b;
            });

            this.particleSystem.geometry.attributes.position.needsUpdate = true;
            this.particleSystem.geometry.attributes.color.needsUpdate = true;
            this.particleSystem.material.opacity = 0.9 - (easedProgress * 0.3);

            if (progress < 1) {
              requestAnimationFrame(scatterStep);
            } else {
              this.isAnimating = false;
              this.animationPhase = 'scattered';
              this.updateStatus();
              
              if (this.autoMode) {
                this.autoTimer = setTimeout(() => {
                  this.startReconstructAnimation();
                }, this.AUTO_CYCLE_DELAY);
              }
            }
          };

          scatterStep();
        }

        startReconstructAnimation() {
          if (this.isAnimating) return;
          
          this.isAnimating = true;
          this.animationPhase = 'reconstructing';
          this.updateStatus();

          const startTime = Date.now();

          const reconstructStep = () => {
            const elapsed = Date.now() - startTime;
            const progress = Math.min(elapsed / this.RECONSTRUCTION_DURATION, 1);
            const easedProgress = this.easeInOutCubic(progress);

            const positions = this.particleSystem.geometry.attributes.position.array;
            const colors = this.particleSystem.geometry.attributes.color.array;

            this.particles.forEach((particle, index) => {
              const original = particle.originalPosition;
              const scattered = particle.scatteredPosition;
              
              particle.currentPosition.x = scattered.x + (original.x - scattered.x) * easedProgress;
              particle.currentPosition.y = scattered.y + (original.y - scattered.y) * easedProgress;
              particle.currentPosition.z = scattered.z + (original.z - scattered.z) * easedProgress;

              // Add spiral motion during reconstruction
              const spiralFactor = (1 - easedProgress) * 0.2;
              const angle = elapsed * 0.003 + index * 0.1;
              particle.currentPosition.x += Math.cos(angle) * spiralFactor;
              particle.currentPosition.z += Math.sin(angle) * spiralFactor;

              positions[index * 3] = particle.currentPosition.x;
              positions[index * 3 + 1] = particle.currentPosition.y;
              positions[index * 3 + 2] = particle.currentPosition.z;
              
              // Color convergence during reconstruction
              const targetColor = new THREE.Color(this.currentColor);
              const currentColor = new THREE.Color(colors[index * 3], colors[index * 3 + 1], colors[index * 3 + 2]);
              currentColor.lerp(targetColor, easedProgress * 0.1);
              
              colors[index * 3] = currentColor.r;
              colors[index * 3 + 1] = currentColor.g;
              colors[index * 3 + 2] = currentColor.b;
            });

            this.particleSystem.geometry.attributes.position.needsUpdate = true;
            this.particleSystem.geometry.attributes.color.needsUpdate = true;
            this.particleSystem.material.opacity = 0.6 + (easedProgress * 0.3);

            // Show lines during reconstruction
            if (progress > 0.3) {
              this.lineSystem.visible = true;
              const lineOpacity = Math.min(0.6, (progress - 0.3) * 2);
              this.lineSystem.material.opacity = lineOpacity;
              this.updateLineConnections();
            }

            if (progress < 1) {
              requestAnimationFrame(reconstructStep);
            } else {
              this.isAnimating = false;
              this.animationPhase = 'complete';
              this.updateStatus();
              
              // Final positioning
              this.particles.forEach((particle, index) => {
                const original = particle.originalPosition;
                particle.currentPosition.x = original.x;
                particle.currentPosition.y = original.y;
                particle.currentPosition.z = original.z;
                
                positions[index * 3] = original.x;
                positions[index * 3 + 1] = original.y;
                positions[index * 3 + 2] = original.z;
              });
              
              this.particleSystem.geometry.attributes.position.needsUpdate = true;
              this.particleSystem.material.opacity = 0.9;
              
              // Fade out lines
              setTimeout(() => {
                this.lineSystem.visible = false;
                this.lineSystem.material.opacity = 0;
              }, 1000);
              
              if (this.autoMode) {
                this.autoTimer = setTimeout(() => {
                  this.startScatterAnimation();
                }, this.AUTO_CYCLE_DELAY);
              }
            }
          };

          reconstructStep();
        }

        resetSphere() {
          if (this.autoMode) this.toggleAutoMode();
          
          this.isAnimating = false;
          this.animationPhase = 'idle';
          this.updateStatus();
          
          const positions = this.particleSystem.geometry.attributes.position.array;
          const colors = this.particleSystem.geometry.attributes.color.array;
          
          this.particles.forEach((particle, index) => {
            const original = particle.originalPosition;
            particle.currentPosition.x = original.x;
            particle.currentPosition.y = original.y;
            particle.currentPosition.z = original.z;
            
            positions[index * 3] = original.x;
            positions[index * 3 + 1] = original.y;
            positions[index * 3 + 2] = original.z;
            
            const color = new THREE.Color(this.currentColor);
            colors[index * 3] = color.r;
            colors[index * 3 + 1] = color.g;
            colors[index * 3 + 2] = color.b;
          });

          this.particleSystem.geometry.attributes.position.needsUpdate = true;
          this.particleSystem.geometry.attributes.color.needsUpdate = true;
          this.particleSystem.material.opacity = 0.9;
          
          this.lineSystem.visible = false;
          this.lineSystem.material.opacity = 0;
        }

        toggleAutoMode() {
          this.autoMode = !this.autoMode;
          this.updateStatus();
          
          const autoBtn = document.getElementById('autoBtn');
          autoBtn.classList.toggle('active', this.autoMode);
          
          if (this.autoMode && !this.isAnimating) {
            if (this.animationPhase === 'complete' || this.animationPhase === 'idle') {
              setTimeout(() => this.startScatterAnimation(), 500);
            } else if (this.animationPhase === 'scattered') {
              setTimeout(() => this.startReconstructAnimation(), 500);
            }
          } else if (!this.autoMode && this.autoTimer) {
            clearTimeout(this.autoTimer);
            this.autoTimer = null;
          }
        }

        updateColor(newColor) {
          this.currentColor = newColor;
          
          if (this.particleSystem) {
            const colors = this.particleSystem.geometry.attributes.color.array;
            const color = new THREE.Color(newColor);
            
            for (let i = 0; i < colors.length; i += 3) {
              colors[i] = color.r;
              colors[i + 1] = color.g;
              colors[i + 2] = color.b;
            }
            
            this.particleSystem.geometry.attributes.color.needsUpdate = true;
          }
          
          if (this.lineSystem) {
            this.lineSystem.material.color.setHex(newColor);
          }
        }

        updateStatus() {
          const statusDisplay = document.getElementById('statusDisplay');
          const buttons = {
            scatter: document.getElementById('scatterBtn'),
            reconstruct: document.getElementById('reconstructBtn'),
            reset: document.getElementById('resetBtn'),
            auto: document.getElementById('autoBtn')
          };

          // Update status text
          let statusText = '';
          switch (this.animationPhase) {
            case 'idle':
              statusText = 'Ready';
              break;
            case 'scattering':
              statusText = 'Scattering...';
              break;
            case 'scattered':
              statusText = 'Scattered';
              break;
            case 'reconstructing':
              statusText = 'Reconstructing...';
              break;
            case 'complete':
              statusText = 'Complete';
              break;
          }
          
          if (this.autoMode) {
            statusText += ' (Auto)';
          }
          
          statusDisplay.textContent = statusText;

          // Update button states
          buttons.scatter.disabled = this.isAnimating || this.animationPhase === 'scattering';
          buttons.reconstruct.disabled = this.isAnimating || this.animationPhase === 'reconstructing';
          buttons.reset.disabled = this.isAnimating;
        }

        easeOutCubic(t) {
          return 1 - Math.pow(1 - t, 3);
        }

        easeInOutCubic(t) {
          return t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
        }

        getStatus() {
          return {
            phase: this.animationPhase,
            isAnimating: this.isAnimating,
            autoMode: this.autoMode,
            particleCount: this.particles.length
          };
        }

        dispose() {
          if (this.particleSystem) {
            this.scene.remove(this.particleSystem);
            this.particleSystem.geometry.dispose();
            this.particleSystem.material.dispose();
          }
          
          if (this.lineSystem) {
            this.scene.remove(this.lineSystem);
            this.lineSystem.geometry.dispose();
            this.lineSystem.material.dispose();
          }
          
          if (this.autoTimer) {
            clearTimeout(this.autoTimer);
          }
        }
      }

      // ===== MAIN THREE.JS SETUP =====
      let scene,
        camera,
        renderer,
        mesh,
        raycaster,
        mouse,
        mouseX = 0,
        mouseY = 0,
        lastMouseX = 0,
        lastMouseY = 0,
        isHovering = false,
        currentColor = 0x0080ff,
        sphereAnimation;

      // Auto rotation speeds
      const autoRotation = { x: 0.01, y: 0.015, z: 0.005 };

      const colorThemes = {
        blue: {
          primary: "#0080ff",
          secondary: "#00d4ff",
          glow: "rgba(0,128,255,0.5)",
        },
        purple: {
          primary: "#8000ff",
          secondary: "#d400ff",
          glow: "rgba(128,0,255,0.5)",
        },
        red: {
          primary: "#ff4757",
          secondary: "#ff6b6b",
          glow: "rgba(255,71,87,0.5)",
        },
        green: {
          primary: "#00ff88",
          secondary: "#00d4ff",
          glow: "rgba(0,255,136,0.5)",
        },
        orange: {
          primary: "#ff9500",
          secondary: "#ffb347",
          glow: "rgba(255,149,0,0.5)",
        },
      };

      function initThree() {
        scene = new THREE.Scene();
        camera = new THREE.PerspectiveCamera(
          75,
          window.innerWidth / window.innerHeight,
          0.1,
          1000
        );
        renderer = new THREE.WebGLRenderer({
          canvas: document.getElementById("canvas"),
          alpha: true,
          antialias: true
        });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));

        // Raycaster for sphere interaction
        raycaster = new THREE.Raycaster();
        mouse = new THREE.Vector2();

        // Create main wireframe sphere (hidden initially)
        const geometry = new THREE.IcosahedronGeometry(1, 1);
        const material = new THREE.MeshPhongMaterial({
          color: currentColor,
          wireframe: true,
          transparent: true,
          opacity: 0,
        });
        mesh = new THREE.Mesh(geometry, material);
        scene.add(mesh);

        // Initialize sphere animation
        sphereAnimation = new SphereAnimation(scene, currentColor);

        const ambientLight = new THREE.AmbientLight(0x404040, 0.4);
        const directionalLight = new THREE.DirectionalLight(currentColor, 1);
        directionalLight.position.set(1, 1, 1);
        scene.add(ambientLight, directionalLight);

        camera.position.z = 5;
        
        // Event listeners
        document.addEventListener('dblclick', onDoubleClick);
        document.addEventListener('mousemove', onMouseMove);
        
        // Control button listeners
        document.getElementById('scatterBtn').addEventListener('click', () => {
          sphereAnimation.startScatterAnimation();
        });
        
        document.getElementById('reconstructBtn').addEventListener('click', () => {
          sphereAnimation.startReconstructAnimation();
        });
        
        document.getElementById('resetBtn').addEventListener('click', () => {
          sphereAnimation.resetSphere();
        });
        
        document.getElementById('autoBtn').addEventListener('click', () => {
          sphereAnimation.toggleAutoMode();
        });
        
        animate();
      }

      function checkHover() {
        if (sphereAnimation && sphereAnimation.particleSystem && !sphereAnimation.isAnimating) {
          raycaster.setFromCamera(mouse, camera);
          const intersects = raycaster.intersectObject(sphereAnimation.particleSystem);
          
          const wasHovering = isHovering;
          isHovering = intersects.length > 0;
          
          document.getElementById("canvas").style.cursor = isHovering ? "grab" : "pointer";
        }
      }

      function onMouseMove(event) {
        mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;
        
        lastMouseX = mouseX;
        lastMouseY = mouseY;
        
        mouseX = event.clientX - window.innerWidth / 2;
        mouseY = event.clientY - window.innerHeight / 2;
        
        checkHover();
      }

      function onDoubleClick(event) {
        if (sphereAnimation && !sphereAnimation.isAnimating) {
          mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
          mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;

          raycaster.setFromCamera(mouse, camera);
          
          if (sphereAnimation.particleSystem) {
            const intersects = raycaster.intersectObject(sphereAnimation.particleSystem);
            
            if (intersects.length > 0) {
              if (sphereAnimation.animationPhase === 'idle' || sphereAnimation.animationPhase === 'complete') {
                sphereAnimation.startScatterAnimation();
              } else if (sphereAnimation.animationPhase === 'scattered') {
                sphereAnimation.startReconstructAnimation();
              }
            }
          }
        }
      }

      function animate() {
        requestAnimationFrame(animate);

        if (sphereAnimation && sphereAnimation.particleSystem) {
          if (isHovering && !sphereAnimation.isAnimating) {
            const mouseDeltaX = mouseX - lastMouseX;
            const mouseDeltaY = mouseY - lastMouseY;
            
            sphereAnimation.particleSystem.rotation.y += mouseDeltaX * 0.005;
            sphereAnimation.particleSystem.rotation.x += mouseDeltaY * 0.005;
            
            if (sphereAnimation.lineSystem) {
              sphereAnimation.lineSystem.rotation.copy(sphereAnimation.particleSystem.rotation);
            }
          } else if (!sphereAnimation.isAnimating) {
            sphereAnimation.particleSystem.rotation.x += autoRotation.x;
            sphereAnimation.particleSystem.rotation.y += autoRotation.y;
            sphereAnimation.particleSystem.rotation.z += autoRotation.z;
            
            if (sphereAnimation.lineSystem) {
              sphereAnimation.lineSystem.rotation.copy(sphereAnimation.particleSystem.rotation);
            }
          }
        }
        
        renderer.render(scene, camera);
      }

      function updateTheme(theme) {
        const colors = colorThemes[theme];
        const root = document.documentElement;
        currentColor = parseInt(colors.primary.replace("#", "0x"));

        root.style.setProperty("--accent", colors.primary);

        if (mesh) {
          mesh.material.color.setHex(currentColor);
          scene.children
            .find((child) => child.type === "DirectionalLight")
            .color.setHex(currentColor);
        }
        
        if (sphereAnimation) {
          sphereAnimation.updateColor(currentColor);
        }
      }

      function handleScroll() {
        const scrollPercent =
          window.scrollY /
          (document.documentElement.scrollHeight - window.innerHeight);

        if (sphereAnimation && sphereAnimation.particleSystem) {
          const orbX = Math.sin(scrollPercent * Math.PI * 2) * 3;
          sphereAnimation.particleSystem.position.x = orbX;
          sphereAnimation.particleSystem.position.y = Math.cos(scrollPercent * Math.PI) * 0.5;
          
          if (sphereAnimation.lineSystem) {
            sphereAnimation.lineSystem.position.copy(sphereAnimation.particleSystem.position);
          }

          if (scrollPercent < 0.12) updateTheme("blue");
          else if (scrollPercent < 0.25) updateTheme("green");
          else if (scrollPercent < 0.38) updateTheme("purple");
          else if (scrollPercent < 0.5) updateTheme("red");
          else if (scrollPercent < 0.62) updateTheme("orange");
          else if (scrollPercent < 0.75) updateTheme("green");
          else if (scrollPercent < 0.88) updateTheme("blue");
          else updateTheme("purple");
        }

        // Navigation active state
        let current = "";
        const sections = document.querySelectorAll("section");
        sections.forEach((section) => {
          const sectionTop = section.offsetTop - 100;
          if (window.scrollY >= sectionTop) {
            current = section.getAttribute("id");
          }
        });

        document.querySelectorAll(".nav-link").forEach((link) => {
          link.classList.remove("active");
          if (link.getAttribute("href") === `#${current}`) {
            link.classList.add("active");
          }
        });
      }

      function initNavigation() {
        const hamburger = document.getElementById("hamburger");
        const mobileMenu = document.getElementById("mobileMenu");

        hamburger.addEventListener("click", () => {
          hamburger.classList.toggle("active");
          mobileMenu.classList.toggle("active");
          document.body.style.overflow = mobileMenu.classList.contains("active")
            ? "hidden"
            : "";
        });

        document.querySelectorAll(".nav-link").forEach((link) => {
          link.addEventListener("click", (e) => {
            e.preventDefault();
            const target = document.querySelector(link.getAttribute("href"));

            if (mobileMenu.classList.contains("active")) {
              hamburger.classList.remove("active");
              mobileMenu.classList.remove("active");
              document.body.style.overflow = "";
            }

            target.scrollIntoView({ behavior: "smooth" });
          });
        });

        mobileMenu.addEventListener("click", (e) => {
          if (e.target === mobileMenu) {
            hamburger.classList.remove("active");
            mobileMenu.classList.remove("active");
            document.body.style.overflow = "";
          }
        });
      }

      function initContactForm() {
        document
          .getElementById("contactForm")
          .addEventListener("submit", (e) => {
            e.preventDefault();
            const btn = e.target.querySelector("button");
            const originalText = btn.textContent;

            btn.textContent = "Sending...";
            btn.disabled = true;

            setTimeout(() => {
              btn.textContent = "Message Sent!";
              setTimeout(() => {
                e.target.reset();
                btn.textContent = originalText;
                btn.disabled = false;
              }, 2000);
            }, 1500);
          });
      }

      function initAnimations() {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.style.opacity = "1";
                entry.target.style.transform = "translateY(0)";
              }
            });
          },
          { threshold: 0.1, rootMargin: "0px 0px -50px 0px" }
        );

        document
          .querySelectorAll(
            ".skill-card, .project-card, .experience-card, .hackathon-card, .certification-card"
          )
          .forEach((el) => {
            el.style.opacity = "0";
            el.style.transform = "translateY(50px)";
            el.style.transition = "all 0.6s ease";
            observer.observe(el);
          });
      }

      window.addEventListener("resize", () => {
        if (camera && renderer) {
          camera.aspect = window.innerWidth / window.innerHeight;
          camera.updateProjectionMatrix();
          renderer.setSize(window.innerWidth, window.innerHeight);
        }
      });

      window.addEventListener("scroll", handleScroll);

      window.addEventListener("load", () => {
        setTimeout(() => {
          document.getElementById("loader").classList.add("hidden");

          ["h1", "p", ".hero-buttons"].forEach((selector, i) => {
            setTimeout(() => {
              const el = document.querySelector(".hero " + selector);
              if (el) {
                el.style.opacity = "1";
                el.style.transform = "translateY(0)";
              }
            }, 200 * i);
          });
        }, 1000);

        initThree();
        initNavigation();
        initContactForm();
        initAnimations();
        updateTheme("blue");
      });

      document.addEventListener("DOMContentLoaded", () => {
        const style = document.createElement("style");
        style.textContent = `
          .hero h1, .hero p, .hero-buttons {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
          }
        `;
        document.head.appendChild(style);
      });
    </script>
  </body>
</html>
